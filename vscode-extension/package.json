{
  "name": "sequant-explorer",
  "displayName": "Sequant Explorer",
  "description": "Premium workflow visualization for Sequant - track issues, acceptance criteria, phases, and PRs",
  "version": "0.1.0",
  "publisher": "sequant",
  "private": true,
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.sequant/state.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sequant-explorer",
          "title": "Sequant",
          "icon": "$(layers)"
        }
      ]
    },
    "views": {
      "sequant-explorer": [
        {
          "id": "sequantIssues",
          "name": "Workflow",
          "icon": "$(issues)",
          "contextualTitle": "Sequant Workflow"
        }
      ]
    },
    "commands": [
      {
        "command": "sequant.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "sequant.openWorktree",
        "title": "Open Worktree in Terminal",
        "icon": "$(terminal)"
      },
      {
        "command": "sequant.openWorktreeNewWindow",
        "title": "Open Worktree in New Window",
        "icon": "$(multiple-windows)"
      },
      {
        "command": "sequant.openInBrowser",
        "title": "View on GitHub",
        "icon": "$(github)"
      },
      {
        "command": "sequant.openPR",
        "title": "View Pull Request",
        "icon": "$(git-pull-request)"
      },
      {
        "command": "sequant.copyBranch",
        "title": "Copy Branch Name",
        "icon": "$(clippy)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "sequant.refresh",
          "when": "view == sequantIssues",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "sequant.openWorktree",
          "when": "view == sequantIssues && viewItem == issue",
          "group": "inline@1"
        },
        {
          "command": "sequant.openInBrowser",
          "when": "view == sequantIssues && viewItem == issue",
          "group": "inline@2"
        },
        {
          "command": "sequant.openWorktreeNewWindow",
          "when": "view == sequantIssues && viewItem == issue",
          "group": "1_actions@1"
        },
        {
          "command": "sequant.openWorktree",
          "when": "view == sequantIssues && viewItem == issue",
          "group": "1_actions@2"
        },
        {
          "command": "sequant.openInBrowser",
          "when": "view == sequantIssues && viewItem == issue",
          "group": "2_links@1"
        },
        {
          "command": "sequant.openPR",
          "when": "view == sequantIssues && viewItem == issue",
          "group": "2_links@2"
        },
        {
          "command": "sequant.copyBranch",
          "when": "view == sequantIssues && viewItem == issue",
          "group": "3_copy@1"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
